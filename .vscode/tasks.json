  "version": "2.0.0",
  "tasks": [
    {
      "label": "PICO-8 [macOS]: Open config.txt",
      "type": "shell",
      "command": "code ~/Library/\"Application Support\"/pico-8/config.txt",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "showReuseMessage": false,
      }
    },
    {
      "label": "PICO-8 [macOS]: Open root_path",
      "type": "shell",
      "command": "open ~/Library/\"Application Support\"/pico-8/carts",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "showReuseMessage": false,
      }
    },
    {
      "label": "PICO-8 [macOS]: Open cdata_path",
      "type": "shell",
      "command": "open ~/Library/\"Application Support\"/pico-8/cdata",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "showReuseMessage": false,
      }
    },
    {
      "label": "PICO-8 [macOS]: Start",
      "type": "shell",
      "command": "/Applications/PICO-8.app/Contents/MacOS/pico8 -root_path $(pwd) -cdata_path $(pwd) paper-hockey.p8",
      "problemMatcher": [],
      "presentation": {
        "focus": true,
        "reveal": "always"
      }
    }
  ]
